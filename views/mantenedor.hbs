<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mantenedor</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</head>

<body>

    <nav> <a href="/">Home</a> <a href="/users/logout">Logout</a>
        
    </nav>



    <!-- Form -->
    <form id="formulario" class="row g-3" action="/mantenedor" method="POST">
        <div class="col-auto">
            <label for="in_name" class="visually-hidden">Nombre:</label>
            <input type="text" class="form-control" id="in_name" name="name" placeholder="Nombre">
        </div>
        <div class="col-auto">
            <label for="in_email" class="visually-hidden">Email:</label>
            <input type="email" class="form-control" id="in_email" name="email" placeholder="Email">
        </div>
        <div class="col-auto">
            <label for="in_password" class="visually-hidden">Contrase単a:</label>
            <input type="password" class="form-control" id="in_password" name="password" placeholder="Contrase単a">
        </div>
        <div class="col-auto">
            <label for="in_categoria" class="visually-hidden">Contrase単a:</label>
            <input type="text" class="form-control" id="in_categoria" name="categoria" placeholder="Categoria">
        </div>
        <div class="col-auto">
            <button id="btn_add"><span
                                class="material-symbols-outlined">
                                add
                            </span></button>
                        <button id="btn_edit" hidden><span
                                class="material-symbols-outlined">
                                edit
                            </span></button>
        </div>
    </form>


    <!-- Table -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Contrase単a</th>
                <th>ID Categoria</th>
                <th>Categoria</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr id="tr-{{id}}">
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{password}}</td>
                <td>{{categoria_id}}</td>
                <td>{{nombrecategoria}}</td>
                <td><a href="#" onclick="editar({{id}})"><span class="material-symbols-outlined">edit</span></a></td>
                <td><a href="/mantenedor/{{id}}?_method=delete"><span
                            class="material-symbols-outlined">delete</span></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>


    <script>
        function editar(id) {
            const tr = document.getElementById(`tr-${id}`);
            const td_name = tr.children[1].textContent;
            const td_email = tr.children[2].textContent;
            const td_password= tr.children[3].textContent;
            document.getElementById("in_name").value = td_name;
            document.getElementById("in_email").value = td_email;
            document.getElementById("in_password").value= td_password;
            document.getElementById("btn_add").hidden = true;
            document.getElementById("btn_edit").hidden = false;
            const form = document.getElementById("formulario");
            form.action = `/mantenedor/${id}?_method=put`
            console.dir(form)
            
        }
    </script>
</body>

</html>