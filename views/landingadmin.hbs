<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/cards.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <title>Vista Administrador</title>
</head>

<body>
  {{> navbar}}

  <div>
    <section class="cards">
      <article class="card card--1">
        <div class="card__info-hover">
        </div>
        <div class="card__img"></div>
        <a href="/mantenedor" class="card_link">
          <div class="card__img--hover"></div>
        </a>
        <div class="card__info">
          <span class="card__category"></span>
          <h3 class="card__title">Mantenedor Usuarios</h3>
          <span class="card__by"> <a href="#" class="card__author" title="author"></a></span>
        </div>
      </article>


      <article class="card card--2">
        <div class="card__info-hover">
        </div>
        <div class="card__img"></div>
        <a href="/mantenedor2" class="card_link">
          <div class="card__img--hover"></div>
        </a>
        <div class="card__info">
          <span class="card__category"></span>
          <h3 class="card__title">Mantenedor Puntos</h3>
          <span class="card__by"><a href="#" class="card__author" title="author"></a></span>
        </div>
      </article>

      <article class="card card--3">
        <div class="card__info-hover">
        </div>
        <div class="card__img"></div>
        <a href="/mapa" class="card_link">
          <div class="card__img--hover"></div>
        </a>
        <div class="card__info">
          <span class="card__category"></span>
          <h3 class="card__title">Ir al mapa</h3>
          <span class="card__by"> <a href="#" class="card__author" title="author"></a></span>
        </div>
      </article>



    </section>

  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h1>Puntos por tipo</h1>
        <table class="table">
          <thead>
            <tr>
              <th>Tipo</th>
              <th>Total Museos</th>
            </tr>
          </thead>
          <tbody>
            {{#each countsByTipo}}
            <tr>
              <td>{{this.tipo}}</td>
              <td>{{this.total_museums}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="col-sm-6">
        <h1>Puntos por creador</h1>
        <table class="table">
          <thead>
            <tr>
              <th>Creador</th>
              <th>Total Museos</th>
            </tr>
          </thead>
          <tbody>
            {{#each countsByCreador}}
            <tr>
              <td>{{creator_name}}</td>
              <td>{{total_museums}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>


  {{> scripts}}
  <script>
    
  </script>

</body>

</html>